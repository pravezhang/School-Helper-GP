<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/bg_gold_1"
    tools:context="com.prave.xjmu.gp.schoolhelper.ScheduleExactActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:alpha="0.8"
        android:background="@drawable/half_alpha_white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:padding="10dp"
            android:layout_height="match_parent"
            >
            <GridView
                android:layout_width="match_parent"
                android:numColumns="8"
                android:stretchMode="columnWidth"
                android:padding="1dp"
                android:id="@+id/schedule_exact_gv"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                >
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单周"
                        android:id="@+id/schedule_exact_single_week"
                        android:checked="true"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="双周"
                        android:id="@+id/schedule_exact_double_week"
                        android:checked="false"
                        />
                </RadioGroup>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_height="0dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:id="@+id/schedule_exact_add"
                    android:background="@android:drawable/ic_menu_add" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
