<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/half_alpha_purposered"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/item_twohand_type"
            android:gravity="center"
            android:textColor="#0d4936"
            android:text="[书籍/资料]"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:text=""
            />
        <TextView
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/item_twohand_name"
            android:textSize="23dp"
            android:textColor="#111111"
            android:text="一二三一二三一二三一二三"

            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/item_twohand_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:text="￥12.34"
            android:textColor="#EE0033"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </LinearLayout>

</LinearLayout>