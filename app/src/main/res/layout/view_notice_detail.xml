<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="25dp"
            android:text="XXXXXXXXXXXXXXXXXXX通知"
            android:id="@+id/notice_detail_title"
            android:textColor="#221122"
            android:maxLines="2"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/notice_detail_publisher"
                android:text=" 教务处 "
                android:textColor="#221122"
                android:maxLines="1"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/notice_detail_publishtime"
                android:text="2017年12月23日 12:34:56"
                android:textColor="#221122"
                android:textSize="15dp"
                android:maxLines="1"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView  android:layout_width="match_parent" android:layout_height="10dp"/>

    <WebView
        android:layout_width="match_parent"
        android:padding="20dp"
        android:visibility="gone"
        android:id="@+id/notice_detail_web"
        android:layout_height="match_parent">

    </WebView>
    <TextView
        android:layout_width="match_parent"
        android:padding="20dp"
        android:visibility="gone"
        android:id="@+id/notice_detail_text"
        android:textColor="#221122"
        android:layout_height="match_parent" />

</LinearLayout>