<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">


            <TextView
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期　　"
                    android:textColor="#000000"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="1dp" />

                <Spinner
                    android:id="@+id/schedule_exact_add_choose_weekday_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="1dp" />

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="课程节次"
                    android:textColor="#000000"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="1dp" />

                <EditText
                    android:id="@+id/schedule_exact_add_class_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="例如：1-2"
                    android:inputType="date" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="1dp" />
            </LinearLayout>


            <TextView
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="课程名称"
                    android:textColor="#000000"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="1dp" />

                <EditText
                    android:id="@+id/schedule_exact_add_class_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/half_alpha_purposered"
                    android:hint="不超过4个字"
                    android:maxLength="4"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="1dp" />
            </LinearLayout>


            <TextView
                android:layout_width="1dp"
                android:layout_height="12dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="单双周　"
                    android:textColor="#000000"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="1dp" />

                <CheckBox
                    android:id="@+id/schedule_exact_add_cb_single_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="单周"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="1dp" />

                <CheckBox
                    android:id="@+id/schedule_exact_add_cb_double_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="双周"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="1dp" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="15dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
